# ==========================
#      Discord Config
# ==========================
TOKEN=your_discord_bot_token_here
CLIENT_ID=your_bot_client_id_here       # Discord bot client ID

GUILD_ID=your_server_id_here            # Discord server ID
GENERAL_CHAT_ID=your_channel_id_here    # General chat channel ID

# ==========================
#         GIF API
# ==========================
GIPHY_API_KEY=your_giphy_api_key_here

# ==========================
#    PostgreSQL Config
# ==========================
PGHOST=localhost                        # Database host
PGUSER=postgres                         # Database user
PGPASSWORD=your_database_password       # Database password
PGDATABASE=caitlyn                      # Database name
PGPORT=5432                             # Database port

# ==========================
#       LLM Config
# ==========================
LLM_ENABLED=false
# SYSTEM_PROMPT - Configure this in Open WebUI model settings instead
OLLAMA_MODEL=llama2

# Open WebUI Configuration
WEBUI_API_KEY=your_webui_api_key_here           # Required for Open WebUI authentication
WEBUI_CHAT_ENDPOINT=http://192.168.2.43:31028/api/chat/completions
WEBUI_ENABLE_WEB_SEARCH=true                    # Enable web search in AI responses
WEBUI_ENABLE_MEMORY=true                        # Enable long-term memory across restarts

# ==========================
#      Logging Config
# ==========================
LOG_LEVEL=INFO                          # Logging level: DEBUG, INFO, WARN, ERROR (default: INFO)
